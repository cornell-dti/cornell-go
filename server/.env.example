# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/cornellgo

# Firebase Cloud Messaging (for push notifications)
FIREBASE_PROJECT_ID=cornell-go
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@cornell-go.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# Google OAuth Client IDs
GOOGLE_IOS_CLIENT_ID=your-ios-client-id.apps.googleusercontent.com
GOOGLE_ANDROID_CLIENT_ID=your-android-client-id.apps.googleusercontent.com
GOOGLE_WEB_CLIENT_ID=your-web-client-id.apps.googleusercontent.com

# JWT Secrets (generate secure random strings for production)
JWT_ACCESS_SECRET=your_access_secret_here
JWT_REFRESH_SECRET=your_refresh_secret_here
JWT_ACCESS_EXPIRATION=120m
JWT_REFRESH_EXPIRATION=0.5y

# Server
PORT=8080

# Apple Sign-In
APPLE_CLIENT_ID=your-apple-client-id

# Admin superuser email
SUPERUSER=admin@cornell.edu

# Development mode (set to 'false' in production)
DEVELOPMENT=true